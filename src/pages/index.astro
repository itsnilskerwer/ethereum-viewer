---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
/* import { getCollection } from 'astro:content'; */
import FormattedDate from '../components/FormattedDate.astro';

// GET REQUEST (SIMPLE QUERIES)
const encodedGetQuery = encodeURIComponent('CONSTRUCT WHERE { ?s ?p ?o . }'); // SELECT returns tabular format e.g. csv
const url = `https://sturdy-bassoon-x4wj6jjwxrcv9wr-8080.app.github.dev/jakarta-example/eip-sparql-query?query=${encodedGetQuery}`;

// Send the GET request
  const getResponse = await fetch(url, {
    method: 'GET',
    headers: {
      // 'Accept': 'application/sparql-results+json', 
	  'Accept': 'text/turtle',
    },
  });
  if (!getResponse.ok) {
    throw new Error(`Response status: ${getResponse.status}`);
  }
  // const jsonData = await response.json(); // Handle JSON response
  const turtleDataAll = await getResponse.text(); // Handle Turtle response as text
  console.log(turtleDataAll);

// POST REQUEST (COMPLEX QUERIES)
const sparqlQuery = `
    PREFIX rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#>
    PREFIX fx: <http://sparql.xyz/facade-x/ns/>

    CONSTRUCT {
      ?document fx:title ?title ;
                fx:author ?author .
    }
    WHERE {
      ?document a fx:YamlFrontMatter ;
                rdf:_1 ?content .
      BIND(REPLACE(STR(?content), "(?s).*title: ([^\n]+).*", "$1") AS ?title)
      BIND(REPLACE(STR(?content), "(?s).*author: ([^\n]+).*", "$1") AS ?author)
    }
  `;

// Send the POST request
const postResponse = await fetch('https://sturdy-bassoon-x4wj6jjwxrcv9wr-8080.app.github.dev/jakarta-example/eip-sparql-query', {
    method: 'POST',
    headers: {
      'Content-Type': 'application/sparql-query',
      'Accept': 'text/turtle'
    },
    body: sparqlQuery
  });

  if (!postResponse.ok) {
    throw new Error(`Response status: ${postResponse.status}`);
  }

  const turtleDataAuthors = await postResponse.text();
  console.log(turtleDataAuthors);
	
